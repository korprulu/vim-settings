root = true

[**]
  end_of_line = lf
  charset = utf-8

[**.js]
  indent_style = space
  indent_size = 4
  trim_trailing_whitespace = true
  insert_final_newline = true
  max_line_length = 80
  quote_type = single
  curly_bracket_next_line = false
  spaces_around_operators = true

[**.css]
  indent_style = space
  indent_size = 4

[**.html]
  indent_style = space
  indent_size = 4
  max_char = 78
  brace_style = expand
